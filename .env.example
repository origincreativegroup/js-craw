# Application Settings
SECRET_KEY=change-me-to-a-random-string-in-production
DEBUG=false

# Database (defaults work with docker-compose)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/job_crawler

# Redis (defaults work with docker-compose)
REDIS_URL=redis://redis:6379/0

# Selenium (defaults work with docker-compose)
SELENIUM_HOST=http://selenium-chrome:4444/wd/hub
SELENIUM_TIMEOUT=30

# Ollama (defaults work with docker-compose)
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama2

# Scheduling
CRAWL_INTERVAL_MINUTES=30

# Notifications
# Choose one: ntfy, pushover, or telegram
NOTIFICATION_METHOD=ntfy

# ntfy.sh settings (if using ntfy)
NTFY_SERVER=https://ntfy.sh
NTFY_TOPIC=your-job-alerts-topic-name

# Pushover settings (if using Pushover)
# PUSHOVER_USER_KEY=your-user-key
# PUSHOVER_APP_TOKEN=your-app-token

# Telegram settings (if using Telegram)
# TELEGRAM_BOT_TOKEN=your-bot-token
# TELEGRAM_CHAT_ID=your-chat-id
